<% layout('layouts/boilerplate')%>
<div id="cluster-map"></div>
    <h1>All Food Recommendations</h1>

    <% for (let foodloc of foodlocs) {%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if (foodloc.images.length) { %>
                        <img class="img-fluid" alt="" src="<%= foodloc.images[0].indexPageImage %>">
                    <% } else { %>
                        <img class="img-fluid" alt="source_img" src="https://liftlearning.com/wp-content/uploads/2020/09/default-image.png">
                    <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <div class="card-title"><%= foodloc.title %></div>
                        <p class="card-text"><%= foodloc.description %></p>
                        <p class="card-text">
                            <small><%= foodloc.location %></small>
                        </p>
                        <a href="/locations/<%= foodloc.id %>" class="btn btn-primary">View</a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>


<script>
    const maptoken = '<%-process.env.MAP_TOKEN%>';
    const locations = {features: <%- JSON.stringify(foodlocs) %>};
</script>

<script src="/javascripts/clusterMap.js"></script>