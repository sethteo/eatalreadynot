<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">Edit Location</h1>
        <div class="col-6 offset-3">
            <form action="/locations/<%= location._id %>?_method=PUT" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="foodlocation[title]" value="<%= location.title %>" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="foodlocation[location]" value="<%= location.location %>" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image URL</label>
                    <input class="form-control" type="text" id="location" name="foodlocation[image]" value="<%= location.image %>" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="location" name="foodlocation[description]" required><%= location.description %></textarea>
                </div>
                <div>
                    <button class="btn btn-success">Add new location</button>
                </div>
            </form>
            <a href="/locations/<%= location._id %>">Back to location</a>
        </div>
    </div>